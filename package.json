{
  "name": "ordena-backend",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": "14.16.0"
  },
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:production": "cross-env NODE_ENV=local.production nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cz": "git-cz",
    "seed:local": "npx cross-env NODE_ENV=local ts-node ./src/seeds",
    "seed:local:dev": "npx cross-env NODE_ENV=development.local ts-node ./src/seeds",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "7.6.13",
    "@nestjs/config": "0.6.3",
    "@nestjs/core": "7.6.13",
    "@nestjs/graphql": "7.9.10",
    "@nestjs/platform-express": "7.6.13",
    "@nestjs/typeorm": "7.1.5",
    "apollo-server-express": "2.21.0",
    "axios": "0.21.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cloudinary": "1.25.0",
    "cross-env": "7.0.3",
    "dataloader": "2.0.0",
    "faker": "^5.4.0",
    "graphql": "15.5.0",
    "graphql-middleware": "6.0.4",
    "graphql-shield": "7.5.0",
    "graphql-tools": "7.0.4",
    "joi": "17.4.0",
    "mysql": "2.18.1",
    "nanoid": "3.1.20",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.6",
    "typeorm": "0.2.31"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@nestjs/cli": "7.5.6",
    "@nestjs/schematics": "7.2.8",
    "@nestjs/testing": "7.6.13",
    "@types/express": "4.17.11",
    "@types/faker": "^5.1.7",
    "@types/jest": "26.0.20",
    "@types/nanoid": "2.1.0",
    "@types/node": "14.14.31",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "commitizen": "4.2.3",
    "eslint": "7.20.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.3.1",
    "husky": "5.1.1",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.2",
    "ts-loader": "8.0.17",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.3"
  },
  "resolutions": {
    "fs-capacitor": "^6.2.0",
    "graphql-upload": "^11.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ],
    "*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
